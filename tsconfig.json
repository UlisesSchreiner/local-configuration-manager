{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./",
    "resolveJsonModule": true,
      "declaration": true,
       "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "tsconfig-paths-webpack-plugin"
      }
    ]                               
  },
  "include": ["lib"],
  "exclude": ["node_modules"]
}
